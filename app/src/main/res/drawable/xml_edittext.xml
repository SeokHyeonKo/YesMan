<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#5CD1E5" android:endColor="#ffffff"
                android:angle="270" />

            <stroke
                android:width="2dip" android:color="#3DB7CC"/>

            <corners android:radius="5dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#B2EBF4" android:endColor="#ffffff"
                android:angle="270" />

            <stroke
                android:width="2dip" android:color="#5CD1E5"/>

            <corners android:radius="5dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#92FFFF" android:endColor="#5CD1E5"
                android:angle="270" />

            <corners android:radius="5dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="#E6FFFF" android:endColor="#ffffff"
                android:angle="270" />

            <stroke
                android:width="0.5dip" android:color="#A6A6A6"/>

            <corners android:radius="5dip"/>

            <padding
                android:left="7dip"
                android:right="7dip"
                android:top="7dip"
                android:bottom="7dip" />
        </shape>
    </item>
</selector>