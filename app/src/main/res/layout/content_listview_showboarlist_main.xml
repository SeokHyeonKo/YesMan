<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="9dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/board_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/relativeLayout"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">



                <TextView
                    android:id="@+id/title"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="ddd"
                    android:layout_alignParentTop="true"
                    android:layout_alignEnd="@+id/primary_button"
                    android:layout_marginEnd="33dp" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/primary_button"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|top"
                    android:text="OK"
                    fbutton:buttonColor="@color/fbutton_color_turquoise"
                    fbutton:shadowEnabled="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="onclick_ok" />
            </RelativeLayout>

            <TextView
                android:id="@+id/content"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ddd"
                android:layout_below="@+id/relativeLayout"
                android:layout_toEndOf="@+id/board_image" />

            <info.hoang8f.widget.FButton
                android:id="@+id/danger_button"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:text="cancle"
                fbutton:buttonColor="@color/fbutton_color_alizarin"
                fbutton:shadowEnabled="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentEnd="true"
                android:onClick="onclick_cancle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
