<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".View.interestAcitivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/domain0"
        android:src="@drawable/design"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/domain1"
        android:src="@drawable/translate"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/domain2"
        android:src="@drawable/document"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/domain3"
        android:src="@drawable/marketing"
        android:layout_alignTop="@+id/domain4"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/domain4"
        android:src="@drawable/computer"
        android:layout_below="@+id/domain1"
        android:layout_alignStart="@+id/domain1"
        android:layout_marginTop="39dp" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/domain5"
        android:src="@drawable/musicvideo"
        android:layout_alignTop="@+id/domain4"
        android:layout_alignStart="@+id/domain2" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/domain6"
        android:src="@drawable/lifestyle"
        android:layout_alignTop="@+id/domain7"
        android:layout_alignEnd="@+id/textView7" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/domain7"
        android:src="@drawable/entertainment"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/domain4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/domain_c0"
        android:checked="false"
        android:layout_alignTop="@+id/domain0"
        android:layout_alignEnd="@+id/domain0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/domain_c1"
        android:checked="false"
        android:layout_alignTop="@+id/domain1"
        android:layout_alignEnd="@+id/domain1" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/domain_c2"
        android:checked="false"
        android:layout_alignTop="@+id/domain2"
        android:layout_alignEnd="@+id/domain2" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/domain_c3"
        android:checked="false"
        android:layout_alignTop="@+id/domain3"
        android:layout_alignEnd="@+id/domain3" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/domain_c4"
        android:checked="false"
        android:layout_alignTop="@+id/domain4"
        android:layout_alignEnd="@+id/domain4" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/domain_c5"
        android:checked="false"
        android:layout_alignTop="@+id/domain5"
        android:layout_alignEnd="@+id/domain5" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/domain_c6"
    android:checked="false"
    android:layout_alignTop="@+id/domain6"
    android:layout_alignStart="@+id/domain_c3" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/domain_c7"
        android:checked="false"
        android:layout_alignTop="@+id/domain7"
        android:layout_alignEnd="@+id/domain7" />


    <info.hoang8f.widget.FButton
        android:id="@+id/success_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:minHeight="@dimen/demo_button_min_height"
        android:minWidth="@dimen/demo_button_min_width"
        android:text="다 음"
        android:textColor="@android:color/white"
        fbutton:buttonColor="@color/fbutton_color_peter_river"
        fbutton:shadowEnabled="true"
        android:onClick="Onclick_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/scrollView" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/domain_c5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="디자인"
        android:id="@+id/textView"
        android:layout_below="@+id/domain0"
        android:layout_alignEnd="@+id/domain0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="번역"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/domain_c4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="문서"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/domain_c5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="마케팅"
        android:id="@+id/textView4"
        android:layout_below="@+id/domain3"
        android:layout_alignStart="@+id/domain_c6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="컴퓨터"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/domain_c7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="음악&amp;비디오"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="생활서비스"
        android:id="@+id/textView7"
        android:layout_below="@+id/domain6"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="엔터테인먼트"
        android:id="@+id/textView8"
        android:layout_below="@+id/domain7"
        android:layout_alignEnd="@+id/textView5" />
</RelativeLayout>
